
<link rel="stylesheet" href="/styles/userlogin.css">


<main>
  <div class="container">
    <div class="login-form">
      <h2>Sign In</h2>
      <p>Please submit your details</p>
      <form method="post" action="/user/register" >

         <input type = "text" id="message" value="{{{message}}}" name="message" hidden> 

        <label>Email</label>
        <input id="email" name="email" type="email" placeholder="Enter your email"  />

        <label>Password</label>
        <input id="password" name="password" type="password" placeholder="Enter your password"/>

        <label>Confirm Password</label>
        <input id="confirmPassword" name="confirmPassword" type="password" placeholder="Enter password again"/>


        <label>User Role</label>
  <div class="role-options">
    <label><input type="radio" name="role" value="user" checked> User</label>
    <label><input type="radio" name="role" value="admin"> Admin</label>
  </div>
  
        <button type="submit">Sign In</button>

        <div class="divider">Or Continue With</div>
        <div class="social-buttons">
          <button class="google">Google</button>
          <button class="facebook">Facebook</button>
        </div>
        </form>
    </div>
    <div class="login-image">
      <img src="/images/natural.jpg" alt="Fitness Login Image" />
    </div>
  </div>
</main>


<script>



document.addEventListener('DOMContentLoaded', function(){

    const message = document.getElementById('message').value;
    if(message){
        swal(message);
    }
    document.querySelector('form').addEventListener('submit', formValidate);
});

    

function formValidate(e){

    e.preventDefault();
    var email = document.getElementById("email").value;
    var password = document.getElementById("password").value;
    var confirmPassword = document.getElementById("confirmPassword").value;
    if(email == ""|| password == "" || confirmPassword == ""){

        swal("All fields are required");
         return false;
    }else if(password != confirmPassword){
     swal("Passwords do no match");
     return false;
    }

   e.target.submit();
   return true; 
}



</script>